{
  "version": "1.0",

  "container": {
    "background": "#ffffff",
    "max_width": "520px",
    "padding": "28px",
    "margin": "0 auto 30px",
    "border_radius": "12px",
    "border_color": "#e5e8e8",
    "shadow": "0 4px 14px rgba(0,0,0,0.08)"
  },

  "title": {
    "font_size": "24px",
    "font_weight": "700",
    "color": "#003b3b",
    "margin_bottom": "20px"
  },

  "label": {
    "font_weight": "700",
    "color": "#006747",
    "margin_bottom": "6px"
  },

  "input": {
    "width": "100%",
    "padding": "10px",
    "font_size": "16px",
    "margin_bottom": "14px",
    "background": "#f9faf9",
    "border_radius": "8px",
    "border_color": "#c7d1cc",
    "focus_border_color": "#006747",
    "focus_shadow": "0 0 0 3px rgba(0,103,71,0.18)"
  },

  "button": {
    "background": "#006747",
    "color": "#ffffff",
    "border_radius": "8px",
    "padding": "12px",
    "font_size": "17px",
    "font_weight": "700",
    "disabled_background": "#9bb7ac",
    "hover_background": "#00563d"
  },

  "option_button": {
    "background": "#eaf4ec",
    "border_color": "#006747",
    "border_radius": "8px",
    "padding": "14px",
    "font_size": "18px",
    "font_weight": "700",
    "hover_background": "#d7ece0"
  },

  "locked_field": {
    "background": "#f0f2f0",
    "color": "#333333"
  },

  "error": {
    "color": "#b30000",
    "font_weight": "bold"
  }
}
