{
  "version": "1.1",

  "theme": {
    "brand": {
      "primary": "#003A70",
      "secondary": "#105FA8",
      "accent": "#F5B93C",
      "success": "#03746E",
      "danger": "#B30000",
      "background": "#FFFFFF",
      "surface": "#F7F7F7"
    },

    "typography": {
      "font_family": "Source Sans Pro, Arial, sans-serif",
      "title": {
        "size": "24px",
        "weight": "700",
        "color": "#003A70"
      },
      "subtitle": {
        "size": "16px",
        "weight": "400",
        "color": "#444444"
      },
      "label": {
        "size": "14px",
        "weight": "600",
        "color": "#003A70"
      },
      "body": {
        "size": "16px",
        "weight": "400",
        "color": "#222222"
      }
    },

    "layout": {
      "container": {
        "max_width": "520px",
        "padding": "24px",
        "margin": "0 auto",
        "background": "#FFFFFF",
        "border_radius": "12px",
        "shadow": "0 4px 14px rgba(0,0,0,0.08)"
      },
      "section_spacing": "24px",
      "field_spacing": "16px"
    },

    "form": {
      "input": {
        "height": "44px",
        "padding": "10px 12px",
        "border_radius": "8px",
        "border_color": "#BABABA",
        "background": "#FFFFFF",
        "font_size": "16px",
        "focus_border_color": "#105FA8",
        "focus_shadow": "0 0 0 3px rgba(16,95,168,0.2)"
      },
      "locked": {
        "background": "#E5E5E5",
        "text_color": "#444444"
      },
      "error": {
        "color": "#B30000",
        "font_size": "14px",
        "weight": "600"
      }
    },

    "buttons": {
      "primary": {
        "background": "#003A70",
        "color": "#FFFFFF",
        "height": "48px",
        "border_radius": "8px",
        "font_size": "16px",
        "font_weight": "700",
        "hover_background": "#002B55",
        "disabled_background": "#BABABA"
      },
      "secondary": {
        "background": "#FFFFFF",
        "color": "#003A70",
        "border": "2px solid #003A70",
        "height": "48px",
        "border_radius": "8px",
        "font_size": "16px",
        "font_weight": "700",
        "hover_background": "#F7F7F7"
      }
    },

    "navigation": {
      "alignment": "center",
      "spacing": "12px",
      "buttons": {
        "back": "secondary",
        "next": "primary",
        "submit": "primary"
      }
    }
  },

  "screens": [
    {
      "id": "step1_zip",
      "title": "Membership Enrollment Portal",
      "description": "Please enter your zip code to begin.",
      "auto_advance": true,
      "sections": [
        {
          "title": "Start",
          "fields": [
            {
              "id": "zip_code",
              "label": "ZIP Code",
              "type": "text",
              "max_length": 5,
              "validation": "zip_lookup"
            }
          ]
        }
      ],
      "next_screen": "step2_personal_contact"
    },

    {
      "id": "step2_personal_contact",
      "title": "Personal Information",
      "description": "Tell us a little bit about yourself.",
      "sections": [
        {
          "title": "Personal Information",
          "fields": [
            { "id": "title", "label": "Title", "type": "select", "options": ["Mr.", "Ms.", "Mrs.", "Dr."] },
            { "id": "first_name", "label": "First Name", "type": "text" },
            { "id": "middle_name", "label": "Middle Name", "type": "text" },
            { "id": "last_name", "label": "Last Name", "type": "text" },
            { "id": "suffix", "label": "Suffix", "type": "select", "options": ["Jr.", "Sr.", "II", "III", "IV"] },
            { "id": "dob", "label": "Date of Birth", "type": "date", "validation": "age_19" }
          ]
        },

        {
          "title": "Contact Information",
          "fields": [
            { "id": "address", "label": "Address", "type": "text" },
            { "id": "city", "label": "City", "type": "text", "locked": true },
            { "id": "county", "label": "County", "type": "text", "locked": true },
            { "id": "county_fips", "label": "County FIPS Code", "type": "text", "locked": true },
            { "id": "region", "label": "Region", "type": "text", "locked": true },
            { "id": "division", "label": "Division", "type": "text", "locked": true },
            { "id": "state", "label": "State", "type": "text", "locked": true },
            { "id": "state_fips", "label": "State FIPS Code", "type": "text", "locked": true },
            { "id": "zip_output", "label": "ZIP Code", "type": "text", "locked": true },
            { "id": "email", "label": "Email Address", "type": "email" },
            { "id": "phone", "label": "Phone Number", "type": "text", "validation": "us_area_code" }
          ]
        }
      ],
      "next_screen": "step3_marital"
    }

    /* remaining screens unchanged */
  ]
}
